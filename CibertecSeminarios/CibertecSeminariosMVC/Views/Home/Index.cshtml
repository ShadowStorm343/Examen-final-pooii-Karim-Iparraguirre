@model List<CibertecSeminariosMVC.Models.Seminario>

@{
    ViewBag.Title = "Seminarios Disponibles";
}

<h2>Seminarios Disponibles</h2>

<table class="table table-bordered">
    <tr>
        <th>Código</th>
        <th>Curso</th>
        <th>Horario</th>
        <th>Capacidad</th>
        <th></th>
    </tr>

    @foreach (var s in Model)
    {
        <tr>
            <td>@s.CodigoSeminario</td>
            <td>@s.NombreCurso</td>
            <td>@s.HorarioClase</td>
            <td>@s.Capacidad</td>
            <td>
                @Html.ActionLink("Ver detalle", "Detalle", new { id = s.CodigoSeminario })
            </td>
        </tr>
    }
</table>
